<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="neelk.problemsolvinggame.Level1Activity">

    <TextView
        android:id="@+id/p1"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="problem1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="problem2"
        android:clickable="true"
        app:layout_constraintLeft_toRightOf="@+id/p1"
        android:layout_marginLeft="117dp"
        app:layout_constraintTop_toTopOf="@+id/p1"
        android:layout_marginRight="8dp"
        android:onClick="onClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/p4"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="65dp"
        android:onClick="onClick"
        android:text="problem4"
        android:clickable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2"
        app:layout_constraintLeft_toRightOf="@+id/p3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/p3"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="66dp"
        android:elevation="0dp"
        android:onClick="onClick"
        android:clickable="true"
        android:text="problem3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1" />

    <Button
        android:id="@+id/id0"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="0"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/id4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp" />

    <Button
        android:id="@+id/id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/id1"
        app:layout_constraintBottom_toTopOf="@+id/id6" />

    <Button
        android:id="@+id/id4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/ok"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/id5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/id8"
        app:layout_constraintLeft_toRightOf="@+id/id4" />

    <Button
        android:id="@+id/id3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:onClick="onClick"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/id2"
        app:layout_constraintBottom_toTopOf="@+id/id7"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/id6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/id5"
        app:layout_constraintBottom_toTopOf="@+id/id9" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/id9"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/id7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/id6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/delete"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp" />

    <Button
        android:id="@+id/id8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/id0"
        app:layout_constraintBottom_toTopOf="@+id/id5" />

    <Button
        android:id="@+id/id9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/id8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>
